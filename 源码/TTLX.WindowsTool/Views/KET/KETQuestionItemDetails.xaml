<UserControl
	x:Class="TTLX.WindowsTool.Views.KET.KETQuestionItemDetails" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:TTLX.WindowsTool.Views.KET">
	<Grid
		Margin="10"
		Background="#FFFFFFFF">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="100" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Border
			Name="XBd"
			Grid.ColumnSpan="2"
			Margin="-10" />
		<TextBlock
			Text="知识点"
			Grid.Row="1"
			Margin="0,10"
			VerticalAlignment="Top"
			HorizontalAlignment="Center" />
		<TextBox
			Grid.Row="1"
			Grid.Column="1"
			Margin="4"
			IsReadOnly="True"
			Text="{Binding QuestionInfo.KETTag, Mode=OneWay}" />
	</Grid>
</UserControl>
