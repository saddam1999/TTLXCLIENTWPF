<UserControl
	x:Class="TTLX.WindowsTool.Views.TopicPackages.Controls.PackageQuestionTextEdit" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:TTLX.WindowsTool.Views.TopicPackages.Controls"
	Margin="0,4">
	<TextBox
		Name="XTxt"
		Style="{DynamicResource TxtMulStyle}"
		MinHeight="60"
		SpellCheck.IsEnabled="True"
		Language="en"
		Text="{Binding Path=TextItem.Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PackageQuestionTextEdit}}"
		TextChanged="XTxt_OnTextChanged" />
</UserControl>
