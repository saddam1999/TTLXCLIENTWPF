<UserControl
	x:Class="TTLX.WindowsTool.Views.TopicPackages.Controls.PackageQuestionReadingItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:TTLX.WindowsTool.Views.TopicPackages.Controls">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="40" />
			<RowDefinition
				Height="2" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="80" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="80" />
		</Grid.ColumnDefinitions>
		<Border
			Grid.RowSpan="3"
			Grid.ColumnSpan="3"
			BorderThickness="1"
			BorderBrush="#FFD3D3D3" />
		<TextBlock
			Text="小题"
			VerticalAlignment="Center"
			HorizontalAlignment="Center" />
		<Button
			Name="XBtnDel"
			Grid.Column="2"
			Style="{DynamicResource BtnDeleteStyle}"
			Content="删除小题"
			Width="60"
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Click="XBtnDel_OnClick" />
		<Rectangle
			Name="XRectLine"
			Grid.Row="1"
			Grid.ColumnSpan="3"
			Fill="#FFD3D3D3" />
		<ContentControl
			Name="XCon"
			Grid.Row="2"
			Grid.Column="1"
			Grid.ColumnSpan="2"
			Margin="2" />
	</Grid>
</UserControl>
