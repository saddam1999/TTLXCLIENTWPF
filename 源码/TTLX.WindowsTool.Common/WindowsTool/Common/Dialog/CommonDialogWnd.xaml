<controls:MetroWindow
	x:Class="TTLX.WindowsTool.Common.Dialog.CommonDialogWnd" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TTLX.WindowsTool.Common.Dialog" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
	Style="{StaticResource WindowStyle}"
	ResizeMode="NoResize"
	SizeToContent="WidthAndHeight"
	WindowStartupLocation="CenterOwner"
	MinWidth="350"
	MinHeight="150" xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">
	<Grid
		Margin="20,10,20,10">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock
			Name="tbDescription"
			Text="desde"
			FontSize="14"
			FontWeight="Bold"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			TextWrapping="Wrap"
			Opacity="0.7" />
		<StackPanel
			Grid.Row="1"
			Orientation="Horizontal"
			HorizontalAlignment="Right">
			<Button
				Name="XBtnOK"
				Content="确定"
				Width="100"
				Height="30"
				Click="XBtnOK_OnClick" />
			<Button
				Name="XBtnCancel"
				Style="{StaticResource BtnGrayStyle}"
				Content="取消"
				Width="100"
				Height="30"
				Margin="20,0,0,0"
				Visibility="Collapsed"
				Click="XBtnCancel_OnClick" />
		</StackPanel>
	</Grid>
</controls:MetroWindow>
